            <li><button onclick= "location.href= '/products/{{id}}' "><i class="ti-search"></i></button></li>
            <li><button class="add-to-cart" data-id="{{id}}"><i class="ti-shopping-cart"></i></button></li>
            <li><button><i class="ti-heart"></i></button></li>
        </ul>
    </div>
    <div class="card-body">
        <p>{{Category.name}} - {{Brand.name}}</p>
        <h4 class="card-product__title"><a href="/products/{{id}}">{{name}}</a></h4>
